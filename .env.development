# Development environment configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database - SQLite for development (no PostgreSQL needed)
DATABASE_URL=sqlite:///./spec_docs.db

# Redis - Local Redis instance
REDIS_URL=redis://localhost:6379/0

# GenAI Service (mock endpoint for development)
GENAI_ENDPOINT_URL=http://localhost:8001/generate
GENAI_API_KEY=dev-key
GENAI_TIMEOUT=300

# Rate limiting
RATE_LIMIT_REQUESTS=1000

# Job processing
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=600

# File storage
UPLOAD_MAX_SIZE=10485760
STORAGE_PATH=./storage

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]